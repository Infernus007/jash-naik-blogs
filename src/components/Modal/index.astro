





---
import SearchButton from "./SearchButton.tsx";
---

<SearchButton client:load/>




<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const button = document.getElementById('btn');
    const modal = document.getElementById('modal');
    const closeModalButton = document.getElementById('close-modal');
    
    function openModal() {
      modal.classList.remove('opacity-0');
      modal.classList.add('opacity-100');
      modal.classList.remove('-z-10');
      modal.classList.add('z-50'); // Add this line to increase the z-index when the modal opens
    }

    function closeModal() {
      modal.classList.remove('opacity-100');
      modal.classList.add('opacity-0');
      modal.classList.remove('z-50'); // Add this line to remove the increased z-index when the modal closes
      modal.classList.add('-z-10');
    }

    if (button) {
      button.addEventListener('click', openModal);
      button.addEventListener('keydown', (event) => {
        if (event.key === 'Enter') {
          openModal();
        }
      });
    }

    if (closeModalButton) {
      closeModalButton.addEventListener('click', closeModal);
    }

    // Close modal on Escape key press
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        closeModal();
      }
    });

    // Open modal on Ctrl + K
    document.addEventListener('keydown', (event) => {
      if (event.ctrlKey && event.key === 'k') {
        event.preventDefault(); // Prevent default browser behavior
        openModal();
      }
    });

    
  });
</script>

