---
import { XLogo, LinkedinLogo, GithubLogo } from "@phosphor-icons/react";
---

<footer id="contact" class="relative mt-16">
	<!-- Background Logo -->

	<!-- Content container with gradient background -->
	<div class="relative">
		<!-- Top fade gradient that blends with the body background -->
		
		<!-- Main content with subtle blue gradient -->
		<div class="relative z-10 container mx-auto px-4 py-16">
			<div class="py-12 bg-gradient-to-b from-blue-500/10 via-blue-500/20 to-blue-500/30 backdrop-blur-sm rounded-3xl">
				<div class="flex flex-col md:flex-row items-center justify-between gap-8 px-8">
					<!-- Brand Section -->
					<div class="flex items-center space-x-4">
						<div class="text-3xl font-bold text-blue-600 dark:text-blue-400">JN</div>
						<div class="h-8 w-px bg-blue-200/20 dark:bg-blue-400/20"></div>
						<div class="text-base text-gray-700 dark:text-gray-300">
							<div class="font-medium">Jash Naik</div>
							<div class="text-sm opacity-60">Full Stack Developer</div>
						</div>
					</div>

					<!-- Social Links -->
					<div class="social-links">
						<a href="https://x.com/CodeAIShield" 
						   target="_blank" 
						   class="social-link group"
						   aria-label="Twitter">
							<XLogo weight="bold" size={24} />
							<span class="social-tooltip">Twitter</span>
						</a>
						<a href="https://www.linkedin.com/in/jash-naik-7612b8162/" 
						   target="_blank" 
						   class="social-link group"
						   aria-label="LinkedIn">
							<LinkedinLogo weight="bold" size={24} />
							<span class="social-tooltip">LinkedIn</span>
						</a>
						<a href="https://github.com/Infernus007" 
						   target="_blank" 
						   class="social-link group"
						   aria-label="GitHub">
							<GithubLogo weight="bold" size={24} />
							<span class="social-tooltip">GitHub</span>
						</a>
					</div>
				</div>
				
				<div class="mt-12 pt-8 border-t border-blue-200/10 dark:border-blue-400/10 px-8">
					<p class="text-center text-base text-gray-600 dark:text-gray-400">
						&copy; {new Date().getFullYear()} Jash Naik. All rights reserved.
					</p>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		position: relative;
		min-height: 350px;
		background: transparent;
	}

	.social-links {
		display: flex;
		gap: 1.5em;
		align-items: center;
	}

	.social-link {
		position: relative;
		color: #3b82f6;
		opacity: 0.8;
		transition: all 0.3s ease-in-out;
		padding: 0.75em;
		border-radius: 12px;
		background: rgba(59, 130, 246, 0.1);
		backdrop-filter: blur(10px);
	}

	.social-link:hover {
		opacity: 1;
		background: rgba(59, 130, 246, 0.2);
		transform: translateY(-2px);
		color: #2563eb;
	}

	.social-tooltip {
		position: absolute;
		bottom: -2rem;
		left: 50%;
		transform: translateX(-50%) translateY(10px);
		background: rgba(0, 0, 0, 0.8);
		color: white;
		padding: 0.5em 1em;
		border-radius: 6px;
		font-size: 0.875rem;
		opacity: 0;
		visibility: hidden;
		transition: all 0.2s ease-in-out;
		white-space: nowrap;
	}

	.social-link:hover .social-tooltip {
		opacity: 1;
		visibility: visible;
		transform: translateX(-50%) translateY(0);
	}

	@media (max-width: 640px) {
		footer {
			min-height: 300px;
		}
		
		.social-links {
			gap: 1em;
		}

		.social-link {
			padding: 0.5em;
		}
	}

	:global(.dark) .social-link {
		color: #60a5fa;
		background: rgba(96, 165, 250, 0.1);
	}

	:global(.dark) .social-link:hover {
		background: rgba(96, 165, 250, 0.2);
		color: #93c5fd;
	}
</style>
