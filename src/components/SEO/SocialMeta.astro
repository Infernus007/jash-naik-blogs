---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: Date;
  modifiedDate?: Date;
  tags?: string[];
  author?: string;
}

const { 
  title, 
  description, 
  image = "/og-image.png", 
  type = "website",
  publishedDate,
  modifiedDate,
  tags = [],
  author = "Jash Naik"
} = Astro.props;

// Enhanced image resolution
const resolveImageUrl = (imageUrl: string) => {
  if (!imageUrl) return new URL("/og-image.png", Astro.site).toString();
  if (imageUrl.startsWith('http')) return imageUrl;
  if (imageUrl.startsWith('/')) return new URL(imageUrl, Astro.site).toString();
  return new URL(`/assets/${imageUrl}`, Astro.site).toString();
};

const resolvedImage = resolveImageUrl(image);
const pageUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<!-- Enhanced Open Graph Tags -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={resolvedImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:alt" content={title} />
<meta property="og:url" content={pageUrl} />
<meta property="og:type" content={type === 'article' ? 'article' : 'website'} />
<meta property="og:site_name" content="Jash Naik's Blog" />
<meta property="og:locale" content="en_US" />

{type === 'article' && publishedDate && (
  <>
    <meta property="article:published_time" content={publishedDate.toISOString()} />
    {modifiedDate && <meta property="article:modified_time" content={modifiedDate.toISOString()} />}
    <meta property="article:author" content={author} />
    {tags.map(tag => (
      <meta property="article:tag" content={tag} />
    ))}
    <meta property="article:section" content="Technology" />
  </>
)}

<!-- Enhanced Twitter Card Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@CodeAIShield" />
<meta name="twitter:creator" content="@CodeAIShield" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={resolvedImage} />
<meta name="twitter:image:alt" content={title} />

<!-- LinkedIn specific tags -->
<meta property="og:image:secure_url" content={resolvedImage} />
<meta name="linkedin:owner" content="jash-naik-7612b8162" />

<!-- Additional social platform tags -->
<meta name="pinterest:media" content={resolvedImage} />
<meta name="pinterest:description" content={description} />

<!-- WhatsApp/Telegram preview tags -->
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- Schema.org for Google+ (legacy but still useful) -->
<meta itemprop="name" content={title} />
<meta itemprop="description" content={description} />
<meta itemprop="image" content={resolvedImage} />
