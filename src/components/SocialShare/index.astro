---
interface Props {
  title: string;
  url: string;
  description?: string;
  hashtags?: string[];
}

const { title, url, description = "", hashtags = [] } = Astro.props;

// Encode URLs and text for sharing
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

// Create a pre-written LinkedIn message with hashtags
const linkedinMessage = `Check out this article: **${title}**\n\n${description}\n\n${hashtags.length > 0 ? hashtags.map((tag) => `#${tag.replace(/\s+/g, "")}`).join(" ") : ""}\n\n${url}`;
const encodedLinkedinMessage = encodeURIComponent(linkedinMessage);

// Create Twitter message with proper formatting
const twitterMessage = `${title}\n\n${description}\n\n${hashtags.length > 0 ? hashtags.map((tag) => `#${tag.replace(/\s+/g, "")}`).join(" ") : ""}\n\n${url}`;
const encodedTwitterMessage = encodeURIComponent(twitterMessage);

// Create Facebook quote with proper formatting
const facebookQuote = `${title}\n\n${description}`;
const encodedFacebookQuote = encodeURIComponent(facebookQuote);

// Social sharing URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTwitterMessage}`,
  linkedin: `https://www.linkedin.com/feed/?shareActive&mini=true&text=${encodedLinkedinMessage}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}&quote=${encodedFacebookQuote}`,
  reddit: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
  hackernews: `https://news.ycombinator.com/submitlink?u=${encodedUrl}&t=${encodedTitle}`,
  copy: url,
};
---

