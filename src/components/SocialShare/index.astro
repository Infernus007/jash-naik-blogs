---
interface Props {
  title: string;
  url: string;
  description?: string;
  hashtags?: string[];
}

const { title, url, description = '', hashtags = [] } = Astro.props;

// Encode URLs and text for sharing
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
const encodedDescription = encodeURIComponent(description);

// Social sharing URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}${description ? `%0A%0A${encodedDescription}` : ''}&url=${encodedUrl}${hashtags.length > 0 ? `&hashtags=${hashtags.join(',')}` : ''}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}&title=${encodedTitle}&summary=${encodedDescription}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}&quote=${encodedTitle}${description ? `%20-%20${encodedDescription}` : ''}`,
  reddit: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
  hackernews: `https://news.ycombinator.com/submitlink?u=${encodedUrl}&t=${encodedTitle}`,
  copy: url,
};
---

<div class="flex flex-col sm:flex-row gap-4 p-6 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-950/20 dark:to-purple-950/20 rounded-xl">
  <div class="flex-1">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
      Share this article
    </h3>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      Help others discover this content by sharing it on your favorite platform
    </p>
  </div>
  
  <div class="flex flex-wrap gap-3">
    <!-- Twitter Share -->
    <a
      href={shareUrls.twitter}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-twitter"
      aria-label="Share on Twitter"
      data-platform="twitter"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
      </svg>
      <span class="hidden sm:inline ml-2">Twitter</span>
    </a>

    <!-- LinkedIn Share -->
    <a
      href={shareUrls.linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-linkedin"
      aria-label="Share on LinkedIn"
      data-platform="linkedin"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      <span class="hidden sm:inline ml-2">LinkedIn</span>
    </a>

    <!-- Facebook Share -->
    <a
      href={shareUrls.facebook}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-facebook"
      aria-label="Share on Facebook"
      data-platform="facebook"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      <span class="hidden sm:inline ml-2">Facebook</span>
    </a>

    <!-- Reddit Share -->
    <a
      href={shareUrls.reddit}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-reddit"
      aria-label="Share on Reddit"
      data-platform="reddit"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
      </svg>
      <span class="hidden sm:inline ml-2">Reddit</span>
    </a>

    <!-- Hacker News Share -->
    <a
      href={shareUrls.hackernews}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button share-hackernews"
      aria-label="Share on Hacker News"
      data-platform="hackernews"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M0 24V0h24v24H0zM6.951 5.896l4.112 7.708v5.064h1.583v-4.972l4.148-7.799h-1.749l-2.457 4.875c-.372.745-.688 1.434-.688 1.434s-.297-.708-.651-1.434L8.831 5.896h-1.88z"/>
      </svg>
      <span class="hidden sm:inline ml-2">HN</span>
    </a>

    <!-- Copy Link Button -->
    <button
      class="share-button share-copy"
      aria-label="Copy link to clipboard"
      data-platform="copy"
      data-url={url}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      <span class="hidden sm:inline ml-2">Copy Link</span>
    </button>

</div>

<script>
  // Social sharing analytics tracking
  document.addEventListener('DOMContentLoaded', () => {
    const shareButtons = document.querySelectorAll('.share-button');
    
    shareButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const platform = button.getAttribute('data-platform');
        
        // Copy link functionality
        if (platform === 'copy') {
          e.preventDefault();
          const url = button.getAttribute('data-url');
          if (url) {
            navigator.clipboard.writeText(url).then(() => {
              // Show success message
              const originalText = button.innerHTML;
              button.innerHTML = `
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="hidden sm:inline ml-2">Copied!</span>
              `;
              setTimeout(() => {
                button.innerHTML = originalText;
              }, 2000);
            });
          }
        }
        
        // Analytics tracking (if you have analytics)
        if (typeof (window as any).gtag !== 'undefined') {
          (window as any).gtag('event', 'share', {
            method: platform,
            content_type: 'article',
            item_id: window.location.pathname
          });
        }
        
        // Plausible analytics tracking (alternative)
        if (typeof (window as any).plausible !== 'undefined') {
          (window as any).plausible('Share', { 
            props: { 
              platform: platform,
              url: window.location.pathname
            }
          });
        }
      });
    });
  });
</script>

<style>
  .share-button {
    @apply flex items-center justify-center px-4 py-2 rounded-lg transition-all duration-200 font-medium text-sm;
    @apply border border-gray-200 dark:border-gray-600 hover:border-transparent;
    @apply bg-white dark:bg-gray-800 hover:shadow-md;
  }

  .share-twitter {
    @apply text-blue-500 hover:bg-blue-500 hover:text-white;
  }

  .share-linkedin {
    @apply text-blue-700 hover:bg-blue-700 hover:text-white;
  }

  .share-facebook {
    @apply text-blue-600 hover:bg-blue-600 hover:text-white;
  }

  .share-reddit {
    @apply text-orange-500 hover:bg-orange-500 hover:text-white;
  }

  .share-hackernews {
    @apply text-orange-600 hover:bg-orange-600 hover:text-white;
  }

  .share-copy {
    @apply text-gray-600 dark:text-gray-400 hover:bg-gray-600 hover:text-white;
  }
</style>
